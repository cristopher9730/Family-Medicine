
@{
    ViewBag.Title = "Contactenos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mb-3 align-items-center justify-content-center mb-5" style="margin-top: 4rem; margin-left:4rem; margin-right:4rem; min-height:35vw">
    <div class="row">
        <div class="col-lg-6">
            <h1 class="mt-4">Contacto</h1>
            <div>
                <p>
                    One Microsoft Way<br />
                    Redmond, WA 98052-6399<br />
                    <abbr title="Phone">P:</abbr>
                    425.555.0100
                </p>
            </div>
            <div>
                <strong>Support:</strong>   <a>familymedicine.vncds@gmail.com</a><br />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group mt-4">
                <label class="form-label">Nombre</label>
                <input class="form-control" placeholder="Ingresa el nombre" type="text" id="txtNombre">
            </div>

            <div class="form-group mt-2">
                <label class="form-label">Asunto</label>
                <input class="form-control" placeholder="Escribe el asunto" type="text" id="txtNombre">
            </div>

            <div class="row mt-2" style="max-width:85%">
                <div class="col-6">
                    <div class="form-group" style="margin-right:5px">
                        <label class="form-label">Telefono</label>
                        <input class="form-control" placeholder="Introduce tu numero de telefono" type="text" id="txtNumero">
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="form-label">Correo</label>
                        <input class="form-control" placeholder="Ingrese tu correo electronico" type="email" id="txtEmail">
                    </div>
                </div>
            </div>

            <div class="form-group mt-2">
                <label class="form-label">Mensaje</label>
                <textarea class="form-control" id="mensajeTextarea"></textarea>
            </div>
            <div class="form-group mt-2 mb-3" style="max-width:2000rem">
                <button type="button" class="btn btn-primary">Enviar</button>
            </div>
        </div>
    </div>
</div>

