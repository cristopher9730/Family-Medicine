
@{
    ViewBag.Title = "RegistrarExamen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="divRegistroExamen" style="margin-top: 60px; margin-left: 70px">
    <div class="card mb-3 m-2" style="width: 1000px">
        <div class="card-header">
            <h3 style="margin-left:40%">Registrar Examen</h3>
        </div>
        <h6 class="card-subtitle text-muted" style="margin-top: 8px; margin-left: 35%">Ingrese los datos para registrar el Examen</h6>
        <div class="card-body">
            <form  style="margin-left:35%">
                <div class="form-group">
                    <label for="nombre">Nombre del Examen:</label>
                    <input id="nombre" class="form-control" type="text" />
                </div>
                <div class="form-group">
                    <label for="descripcion">Descripción del Examen:</label>
                    <input id="descripcion" class="form-control" type="text" style="height: 100px" />
                </div>
                <div class="form-group">
                    <label for="precio">Precio ₡:</label>
                    <input id="precio" class="form-control" type="number" />
                </div>
                <div class="form-group mt-3" style="margin-left:4%">
                    <button type="button" class="btn btn-secondary">Agregar imagen del Examen</button>
                </div>
                <div class="form-group mt-3">
                    <img style="width:80px;height:80px; margin-left:14%" src="~/Content/imgs/vectoriales/Examen.png" />
                </div>
                <button style="margin-left:13%" type="submit" class="btn btn-primary mt-3">Registrar</button>
            </form>
        </div>
    </div>
</div>



