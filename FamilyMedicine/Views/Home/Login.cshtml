@{
    ViewBag.Title = "Login";
}

<link rel="stylesheet" href="~/Content/css/Login.css" />
<script src="https://kit.fontawesome.com/e77fc0ae51.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

<section class="loginSectionContenedor">

    <form action="@Url.Action("Login","Acceso")" method="post" id="formContenedorId">
        <div class="mb-3 mt-3">
            <div class="input-group has-validation">
                <span class="input-group-text" id="inputGroupPrepend"><i class="fa-solid faColor fa-user"></i></span>
                <input type="text" name="Correo" class="form-control" placeholder="Correo" id="validacionDeUsuario" aria-describedby="inputGroupPrepend" required>
                
            </div>
        </div>
        <div class="mb-3">
            <div class="input-group has-validation">
                <span class="input-group-text" id="inputGroupPrepend"><i class="fa-solid  faColor fa-lock"></i></span>
                <input type="password" name="Clave" class="form-control" placeholder="Contraseña" id="validacionDePassword" aria-describedby="inputGroupPrepend" required>
            </div>
            @if (ViewData["Mensaje"] != null)
            {
                <div class="alert alert-warning" role="alert">
                    @ViewData["Mensaje"]
                </div>
            }
        </div>
        <button type="submit" class="btn login_btn">Iniciar sesión</button>
    </form>


    <img data-aos="fade-down"
         data-aos-duration="3000" class="imagenLogin" src="~/Content/imgs/vectoriales/medicos.png" alt="Imagen Login Family medice" />

</section>


<script src="https://unpkg.com/aos@next/dist/aos.js"></script>
<script>
    AOS.init();
</script>
<script>
    AOS.init({
        once: true,
    });
</script>